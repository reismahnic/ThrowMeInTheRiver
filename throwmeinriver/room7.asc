function repeatedly_execute_always()
{
    if(fadedOut == false)
    {
        if(MusicThrowMeInTheRiver.Volume > 0)
        {
            MusicThrowMeInTheRiver.Volume -= 5;
        }
        else 
        {
            fadedOut = true;
        }
    }
    
    if(fadedOut && musicStarted == false)
    {
      aMonologue_3.Play(eAudioPriorityNormal, eOnce);
      musicStarted = true;
    }
}

